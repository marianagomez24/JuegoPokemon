@model JuegoPokemon.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: url('/img/fondo.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .card-header {
            background-color: #732C39;
            color: white;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .btn-primary {
            background-color: #732C39;
            border: none;
        }

            .btn-primary:hover {
                background-color: #732C39;
            }

        .form-control {
            border-radius: 0.5rem;
        }

        .alert {
            margin-top: 1rem;
        }

        a {
            color: #732C39;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header text-center">
            <h3>Registro</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Acceso" asp-action="Registro" method="post">
                <div class="mb-3">
                    <input class="form-control" type="text" placeholder="Nombre" required asp-for="Name" />
                </div>
                <div class="mb-3">
                    <select asp-for="Rol" class="form-control">
                        <option value="Admin">Administrador</option>
                        <option value="Entrenador">Entrenador</option>
                        <option value="Enfermero">Enfermero</option>
                    </select>
                </div>
                <div class="mb-3">
                    <input class="form-control" type="text" placeholder="Usuario" required asp-for="usuario" />
                </div>
                <div class="mb-3">
                    <input class="form-control" type="password" placeholder="Contraseña" required asp-for="contrasena" />
                </div>
                <div class="mb-3">
                    <input class="form-control" type="password" placeholder="Confirmar Contraseña" required asp-for="ConfirmarContrasena" />
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary" type="submit">Registrarse</button>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                </div>

                <div class="text-center">
                    ¿Ya tienes cuenta? <a asp-controller="Acceso" asp-action="Login">Inicia Sesión</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
